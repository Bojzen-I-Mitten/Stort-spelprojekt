<Window x:Class="ThomasEditor.Elements.OpenProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThomasEditor.Elements"
        mc:Ignorable="d"
        Title="Information" Height="100" Width="200"
        ResizeMode="NoResize"
        >
    <Grid Margin="0,0,-6,0">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Please chose a project before continuing:" FontSize="10" Margin="0,0,0,20">
        </TextBlock>
        <Button Height="20" Width="50" Margin="10,46,140,5" Content="Load" Click="Load_Project"/>
        <Button Height="20" Width="50" Margin="73,46,77,5" Content="New" Click="New_Project"/>
        <Button Height="20" Width="50" Margin="135,46,15,5" Content="Cancel" HorizontalContentAlignment="Center" Click="Cancel"/>
    </Grid>
</Window>
