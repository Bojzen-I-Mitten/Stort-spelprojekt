<UserControl x:Class="ThomasEditor.GameObjectHierarchy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThomasEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TreeView AllowDrop="True" x:Name="hierarchy" Focusable="True" Background="#444444" SelectedItemChanged="SelectedGameObjectChanged"
                  DragOver="hierarchy_DragOver" Drop="hierarchy_Drop" MouseMove="hierarchy_MouseMove" MouseUp="hierarchy_MouseUp"
                  PreviewMouseDown="hierarchy_PreviewMouseDown">
            <TreeView.ContextMenu>
                <ContextMenu x:Name="hiearchyContextMenu">
                    <MenuItem Header="Delete" Click="MenuItem_DeleteGameObject" IsEnabled="False"/>
                    <MenuItem Header="Rename" Click="MenuItem_RenameGameObject" IsEnabled="False"/>
                    <MenuItem Header="Save as prefab" IsEnabled="{Binding}" Click="MenuItem_SaveAsPrefab"/>
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>
    </Grid>
</UserControl>
